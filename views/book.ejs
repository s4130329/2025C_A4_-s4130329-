<%- include('partials/header') %>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= currentBook.title %></li>
    </ol>
</nav>

<div class="row mb-5">
    <div class="col-md-4">
        <img src="<%= currentBook.image %>" alt="<%= currentBook.title %>" class="img-fluid rounded shadow">
    </div>
    <div class="col-md-8">
        <h2><%= currentBook.title %></h2>
        <p class="text-muted">By <%= currentBook.author %> (<%= currentBook.year %>)</p>
        <span class="badge bg-info mb-3"><%= currentBook.category %></span>
        <p><%= currentBook.description %></p>

        <a href="/" class="btn btn-secondary mt-3">â¬… Back to List</a>
    </div>
</div>

<h3 class="mb-3">Related Books in <%= currentBook.category %></h3>
<div class="row">
    <% relatedBooks.forEach(book => { %>
        <div class="col-6 col-md-3 mb-3">
            <div class="card h-100">
                <img src="<%= book.image %>" class="card-img-top" alt="<%= book.title %>">
                <div class="card-body p-2">
                    <h6 class="card-title">
                        <a href="/book/<%= book._id %>"><%= book.title %></a>
                    </h6>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<%- include('partials/footer') %>