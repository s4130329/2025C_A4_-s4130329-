<%- include('partials/header') %>

<h1 class="text-center mb-4"><%= readingList ? readingList.name : 'Weekly List' %></h1>

<div class="text-center mb-4">
    <form action="/" method="POST" onsubmit="document.getElementById('refreshBtn').innerText = 'Refreshing...'; document.getElementById('refreshBtn').disabled = true;">
        <button type="submit" id="refreshBtn" class="btn btn-primary">ðŸ”„ Refresh</button>
    </form>
</div>

<div class="row">
    <% 
       // ì¹´í…Œê³ ë¦¬ë³„ë¡œ ì±…ì„ ë¶„ë¥˜í•˜ëŠ” í—¬í¼ ë¡œì§
       let textbook = readingList.books.find(b => b.category === 'TEXTBOOK');
       let philosophy = readingList.books.find(b => b.category === 'PHILOSOPHY');
       let novel = readingList.books.find(b => b.category === 'NOVEL');
    %>

    <div class="col-md-4 mb-3">
        <div class="card h-100 border-primary">
            <div class="card-header bg-primary text-white">Mon - Wed (Textbook)</div>
            <img src="<%= textbook.image %>" class="card-img-top" alt="<%= textbook.title %>" style="height: 300px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="/book/<%= textbook._id %>" class="text-decoration-none"><%= textbook.title %></a>
                </h5>
                <p class="card-text">By <%= textbook.author %></p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card h-100 border-success">
            <div class="card-header bg-success text-white">Thu - Fri (Philosophy)</div>
            <img src="<%= philosophy.image %>" class="card-img-top" alt="<%= philosophy.title %>" style="height: 300px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="/book/<%= philosophy._id %>" class="text-decoration-none"><%= philosophy.title %></a>
                </h5>
                <p class="card-text">By <%= philosophy.author %></p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card h-100 border-warning">
            <div class="card-header bg-warning text-dark">Sat - Sun (Novel)</div>
            <img src="<%= novel.image %>" class="card-img-top" alt="<%= novel.title %>" style="height: 300px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="/book/<%= novel._id %>" class="text-decoration-none"><%= novel.title %></a>
                </h5>
                <p class="card-text">By <%= novel.author %></p>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>